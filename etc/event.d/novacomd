start on stopped bootmisc
respawn
normal exit 0 TERM

console output

service

env UPSTART_JOB
env UPSTART_JOB_ID
env UPSTART_EVENT

script
	# On fast machines, virtualbox launches us too quickly and novacomd
	# fails to start. A 1 second delay fixes that.
	sleep 1
	export ip_addr=$(ip route show | grep default | awk '{print $3}')
	exec /usr/sbin/novacomd --connect-ip $ip_addr > /dev/null
end script
