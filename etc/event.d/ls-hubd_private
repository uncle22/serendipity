start on stopped bootmisc
stop on started start_update

pre-start script
    mkdir -p /var/palm/ls2/roles/prv
    mkdir -p /var/palm/ls2/roles/pub
    mkdir -p /var/palm/ls2/services/prv
    mkdir -p /var/palm/ls2/services/pub
end script

script
    /usr/sbin/ls-hubd --conf /etc/luna-service2/ls-private.conf --pmloglib
end script
